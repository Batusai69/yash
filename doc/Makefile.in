.POSIX:
.SUFFIXES: .html .css .js

INSTALL_PROGRAM = ../install-sh
INSTALL_DATA = $(INSTALL_PROGRAM) -m 644

all:

DESTDIR =
HTMLDIR = @HTMLDIR@
HTMLINNERDIRS = ja ja/bi
HTMLINNERDIRSREV = ja/bi ja
install: $(DESTDIR)$(HTMLDIR)
	@for d in $(HTMLINNERDIRS); do \
		echo $(INSTALL_PROGRAM) -d $(DESTDIR)$(HTMLDIR)/$$d; \
		$(INSTALL_PROGRAM) -d $(DESTDIR)$(HTMLDIR)/$$d || exit; \
	done
	@while read -r f; do \
		echo $(INSTALL_DATA) -c $$f $(DESTDIR)$(HTMLDIR)/$$f; \
		$(INSTALL_DATA) -c $$f $(DESTDIR)$(HTMLDIR)/$$f || exit; \
	done <filelist
installdirs: $(DESTDIR)$(HTMLDIR)
$(DESTDIR)$(HTMLDIR):
	$(INSTALL_PROGRAM) -d $@
uninstall:
	@while read -r f; do \
		echo rm -f $(DESTDIR)$(HTMLDIR)/$$f; \
		rm -f $(DESTDIR)$(HTMLDIR)/$$f; \
	done <filelist
	@for d in $(HTMLINNERDIRSREV); do \
		echo rmdir $(DESTDIR)$(HTMLDIR)/$$d; \
		rmdir $(DESTDIR)$(HTMLDIR)/$$d; \
	done
	-rmdir $(DESTDIR)$(HTMLDIR)

DISTCONTENTS = Makefile.in filelist
distcontents: $(DISTCONTENTS)
copy-distcontents: $(DISTCONTENTS)
	mkdir -p $(DISTTARGETDIR)
	@echo Copying contents to $(DISTTARGETDIR)
	@for f in $(DISTCONTENTS); do ln $$f $(DISTTARGETDIR); done
	@for d in $(HTMLINNERDIRS); do mkdir -p $(DISTTARGETDIR)/$$d; done
	@while read -r f; do ln $$f $(DISTTARGETDIR)/$$f; done <filelist

distclean:
	rm -f Makefile
maintainer-clean: distclean
	rm -f Makefile.deps

.PHONY: all install installdirs uninstall distcontents copy-distcontents distclean maintainer-clean


