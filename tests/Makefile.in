.POSIX:
.SUFFIXES: .c .h .o

CC = @CC@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
LDLIBS = @LDLIBS@

TEST_ITEMS = *.tst  # the default test items

INVOKEOBJS = invoke.o
BYPRODUCTS = invoke

test test-all: invoke
	@$(SHELL) ./run-test.sh
test-posix:
	@$(MAKE) TEST_ITEMS='*.p.tst' test

.c:
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@ $< $(LDLIBS)
.c.o:
	$(CC) $(CFLAGS) -c $<

distcontents: ;

clean:
	rm -f $(BYPRODUCTS) $(INVOKEOBJS)

.PHONY: test-all test-posix test distcontents clean


