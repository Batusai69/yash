.POSIX:
.SUFFIXES: .c .h .o .a

CC = @CC@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
LDLIBS = @LDLIBS@
AR = @AR@
ARFLAGS = @ARFLAGS@
SOURCES = display.c display.h editing.c editing.h key.h keymap.c keymap.h lineedit.c lineedit.h terminfo.c terminfo.h trie.c trie.h
OBJS = display.o editing.o keymap.o lineedit.o terminfo.o trie.o
TARGET = @LINEEDIT_ARCHIVE@
MKCMDSOBJS = mkcmds.o

BYPRODUCTS = mkcmds commands.in

all: $(TARGET)

.c:
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@ $< $(LDLIBS)
.c.o:
	$(CC) $(CFLAGS) -c $<

$(TARGET): $(OBJS)
	$(AR) $(ARFLAGS) $@ $(OBJS)
mkcmds: $(MKCMDSOBJS)
commands.in: mkcmds
	./mkcmds > $@
keymap.o: commands.in

DISTCONTENTS = $(SOURCES) Makefile.in Makefile.deps
distcontents: $(DISTCONTENTS)

# ctags conforms to POSIX, but etags and cscope do not.
CTAGSARGS = @CTAGSARGS@
ETAGSARGS = @ETAGSARGS@
tags: $(SOURCES)
	ctags $(CTAGSARGS)
TAGS: $(SOURCES)
	etags $(ETAGSARGS)
cscope: cscope.out
cscope.out: $(SOURCES)
	cscope -b

mostlyclean:
	-rm -rf $(OBJS) $(MKCMDSOBJS) $(BYPRODUCTS)
clean: mostlyclean
	-rm -rf $(TARGET)
distclean: clean
	-rm -rf Makefile tags TAGS cscope.out
maintainer-clean: distclean
	-rm -rf Makefile.deps

.PHONY: all distcontents cscope mostlyclean clean distclean maintainer-clean


