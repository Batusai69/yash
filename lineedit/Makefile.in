.POSIX:
.SUFFIXES: .c .h .d .o .a

CC = @CC@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
LDLIBS = @LDLIBS@
AR = @AR@
ARFLAGS = @ARFLAGS@
SOURCES = display.c editing.c keymap.c lineedit.c mkcmds.c terminfo.c trie.c
HEADERS = display.h editing.h key.h keymap.h lineedit.h terminfo.h trie.h
OBJS = display.o editing.o keymap.o lineedit.o terminfo.o trie.o
TARGET = lineedit.a
BYPRODUCTS = mkcmds.o mkcmds commands.in *.dSYM

all: $(TARGET)

.c:
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@ $< $(LDLIBS)
.c.o:
	@rm -f $@
	$(CC) $(CFLAGS) -c $<

$(TARGET): $(OBJS)
	$(AR) $(ARFLAGS) $@ $(OBJS)
commands.in: mkcmds
	./mkcmds > $@
keymap.o: commands.in

DISTCONTENTS = $(SOURCES) $(SOURCES:.c=.d) $(HEADERS) Makefile.in
# "distcontents" depends on "$(OBJS)" to ensure all *.d files up-to-date
distcontents: $(DISTCONTENTS) $(OBJS)
copy-distcontents: distcontents
	mkdir -p $(DISTTARGETDIR)
	cp $(DISTCONTENTS) $(DISTTARGETDIR)

# ctags conforms to POSIX, but etags and cscope do not.
CTAGSARGS = @CTAGSARGS@
ETAGSARGS = @ETAGSARGS@
tags: $(SOURCES) $(HEADERS)
	ctags $(CTAGSARGS)
TAGS: $(SOURCES) $(HEADERS)
	etags $(ETAGSARGS)
cscope: cscope.out
cscope.out: $(SOURCES) $(HEADERS)
	cscope -b

mostlyclean:
	-rm -rf $(OBJS) $(BYPRODUCTS)
clean: mostlyclean
	-rm -rf $(TARGET)
distclean: clean
	-rm -rf Makefile tags TAGS cscope.out
maintainer-clean: distclean
	-rm -rf $(SOURCES:.c=.d)

.PHONY: all distcontents copy-distcontents cscope mostlyclean clean distclean maintainer-clean

@MAKE_INCLUDE@ display.d
@MAKE_INCLUDE@ editing.d
@MAKE_INCLUDE@ keymap.d
@MAKE_INCLUDE@ lineedit.d
@MAKE_INCLUDE@ mkcmds.d
@MAKE_INCLUDE@ terminfo.d
@MAKE_INCLUDE@ trie.d
