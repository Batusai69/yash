.POSIX:
.SUFFIXES: .c .h .o .a

CC = @CC@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
LDLIBS = @LDLIBS@
AR = @AR@
ARFLAGS = @ARFLAGS@
SOURCES = display.c display.h key.h keymap.c keymap.h lineedit.c lineedit.h terminfo.c terminfo.h trie.c trie.h
OBJS = display.o keymap.o lineedit.o terminfo.o trie.o
TARGET = @LINEEDIT_ARCHIVE@

BYPRODUCTS = 

all: $(TARGET)

# Though these rules are exactly the same as the default rules defined by POSIX,
# we re-define them here because at least GNU Make is not fully compliant.
.c:
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@ $<
.c.o:
	$(CC) $(CFLAGS) -c $<

$(TARGET): $(OBJS)
	$(AR) $(ARFLAGS) $@ $(OBJS)

DISTCONTENTS = $(SOURCES) Makefile.in
distcontents: $(DISTCONTENTS)

# ctags conforms to POSIX, but etags and cscope do not.
# TODO @CTAGSARGS@, @ETAGSARGS@
tags: $(SOURCES)
	ctags $(SOURCES)
TAGS: $(SOURCES)
	etags $(SOURCES)
cscope: cscope.out
cscope.out: $(SOURCES)
	cscope -b

mostlyclean:
	-rm -rf $(OBJS) $(BYPRODUCTS)
clean: mostlyclean
	-rm -rf $(TARGET)
distclean: clean
	-rm -rf Makefile tags TAGS cscope.out

.PHONY: all distcontents cscope mostlyclean clean distclean

# source file dependencies
display.o: ../common.h ../config.h ../history.c ../job.h ../strbuf.h display.h lineedit.h terminfo.h
keymap.o: ../common.h ../config.h ../hashtable.h key.h keymap.h lineedit.h terminfo.h trie.h
lineedit.o: ../common.h ../config.h ../option.h ../sig.h ../strbuf.h ../util.h display.h key.h keymap.h lineedit.h terminfo.h trie.h
terminfo.o: ../common.h ../config.h ../util.h key.h terminfo.h trie.h
trie.o: ../common.h ../config.h ../util.h key.h trie.h
